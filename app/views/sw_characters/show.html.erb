<div class="container">
   <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
              <%= @sw_character['name'] %>
          </h4>
        </div>
        <div class="card-body">
          <p class="card-title">
          <strong>Height:</strong>
          <%= @sw_character['height'] %>
          </p>
          <p class="card-text">
          <strong>Hair Color:</strong>
            <%= @sw_character['hair_color'] %>
          </p>
          <p class="card-text">
          <strong>Skin Color:</strong>
            <%= @sw_character['skin_color'] %>
          </p>
          <p class="card-text">
          <strong>Eye Color:</strong>
            <%= @sw_character['eye_color'] %>
          </p>
           <p class="card-text">
          <strong>Birth Year:</strong>
            <%= @sw_character['birth_year'] %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
