<div class="container">
   <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= @sw_character['name'] %>
          </h5>
          <p class="card-text">
            <strong>Species:</strong>
            <%= @sw_character['species'].capitalize%>
          </p>
          <p class="card-text">
            <strong>HomeWorld:</strong>
            
            <%= @sw_character['homeworld']%>
          </p>
          <p class="card-text">
            <img src="<%= @sw_character['image']%>" class="img-fluid"><img>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
