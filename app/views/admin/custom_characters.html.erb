<div class="container">
    <h1 class="text-center">Adminstrator</h1>
    <%= render 'admin/nav_links' %>

    <table class="table table-dark table-stripped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Custom Character</th>
                <th scope="col">Created By</th>
            <tr>
        </thead>
        <tbody>
        <% @custom_characters.each do |custom_character| %>
        <tr>
            <th scope="row"><%= custom_character.id %></th>
            <td><%= link_to custom_character.name.truncate(15), admin_custom_character_path(custom_character) %></td>
            <td><%= custom_character.user.name %></td>
        </tr>
        <% end %>
    </table>
</div>